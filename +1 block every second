local library = loadstring(game:HttpGet(("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wall%20v3")))()

local w = library:CreateWindow("+1 Blocks Every Second") -- Creates the window

local b = w:CreateFolder("General") -- Creates the folder(U will put here your buttons,etc)
local c = w:CreateFolder("Credit") -- Creates the folder(U will put here your buttons,etc)

local remotePlaceBlock = game:GetService("ReplicatedStorage").Remotes.PlaceBlock

c:Label("Made by Emperor",{
    TextSize = 12; -- Self Explaining
    TextColor = Color3.fromRGB(255,255,255); -- Self Explaining
    BgColor = Color3.fromRGB(69,69,69); -- Self Explaining
    
}) 

c:Label("YTB: Dutz",{
    TextSize = 12; -- Self Explaining
    TextColor = Color3.fromRGB(255,255,255); -- Self Explaining
    BgColor = Color3.fromRGB(139,0,0); -- Self Explaining
    
}) 

getgenv().autoplaceBlok = true;
getgenv().autoRebirth = true;
getgenv().autoEBPet = true;
getgenv().claimGift = true;
game:GetService("ReplicatedStorage").Remotes.ClaimGift:InvokeServer()

function autoplaceblock()
    task.spawn(function()
        while task.wait() and getgenv().autoplaceBlok do
            remotePlaceBlock:FireServer()
        end
    end)
end

function autoclaimdaily()
    task.spawn(function()
        while task.wait() do
            game:GetService("ReplicatedStorage").Remotes.Claim:InvokeServer()
        end
    end)
end

function autoclaimgift()
    task.spawn(function()
        while task.wait() and getgenv().claimGift do
            game:GetService("ReplicatedStorage").Remotes.ClaimGift:InvokeServer()
        end
    end)
end

function autoEB()
    task.spawn(function()
        while task.wait() and getgenv().autoEBPet do
		    local args = {
		    [1] = "Equip Best"
		}
		game:GetService("ReplicatedStorage").RemoteEvents.PetActionRequest:InvokeServer(unpack(args))

        end
    end)
end


local rebirthShop = {"RebirthShop"}
function autoRebirths()
    task.spawn(function()
        while task.wait() and getgenv().autoRebirth do
            game:GetService("ReplicatedStorage").Remotes.Rebirth:InvokeServer(rebirthShop)
        end
    end)
end

b:Toggle("Auto Place",function(bool)
    getgenv().autoplaceBlok = bool
    if bool then
        autoplaceblock();
    end
end)

b:Toggle("Auto Rebirth",function(bool)
    getgenv().autoRebirth = bool
    if bool then
        autoRebirths();
    end
end)

b:Toggle("Equip Best",function(bool)
    getgenv().autoEBPet = bool
    if bool then
        autoEB();
    end
end)

b:Toggle("Claim Gift",function(bool)
    getgenv().claimGift = bool
    if bool then
        autoclaimgift();
    end
end)

b:Button("Claim Daily Chest",function()
    autoclaimdaily();
end)

b:DestroyGui()
